<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widgetLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingTop="5dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/navItemIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:padding="8dp"
            android:src="@drawable/ic_bell_off_dark" />

        <TextView
            android:id="@+id/WidgetLabel"
            style="@style/CardTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="Task Title"
            android:textColor="@color/Black" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/card_text" >

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/CardBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@drawable/selectable_background_cardbank"
        android:gravity="bottom|right"
        android:orientation="vertical"
        android:padding="4dp" >

        <TextView
            android:id="@+id/description"
            style="@style/CardText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="4"
            android:text="This is a task description"
            android:textColor="@color/Black" />

        <TextView
            android:id="@+id/Time"
            style="@style/CardTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:gravity="right"
            android:text="time here"
            android:textColor="@color/Black"
            android:textSize="@dimen/card_action_small_text" />
    </LinearLayout>

</LinearLayout>